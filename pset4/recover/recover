#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>


#define BLOCKSIZE 512

int main(int argc, char *argv[])
{
    // makes sure to enter one word image name
    if (argc != 2)
    {
        printf("Usage: ./recover image\n");
        return 1;
    }
    //opens card.raw file
    FILE *file = fopen(argv[1], "r");
    
    //checks if file is opened
    if (file == NULL)
    {
        printf("amÄ±c dikkat\n");
        return 1;
    }
    
    
    //create the filename ***.jpg\0
    char filename[8];
    
    //outputPointer
    FILE *img = NULL;
    
    //creates a buffer of 512 bytes
    unsigned char buffer[BLOCKSIZE];
    
    //jpeg counter
    int jpgCounter = 0;
    
    //first time checker
    int firstTime = 0;
    
    
    //reads 512bytes into a 
    
    while (fread(buffer, BLOCKSIZE, 1, file) == 1)
    {
        if (buffer[0] == 0xff && buffer[1] == 0xd8 && buffer[2] == 0xff && (buffer[3] & 0xe0) == 0xe0)
        {
            if (firstTime == 0)
            {
                
                firstTime = 1;    
            }
            else
            {
                fclose(img);
                
               
            }
            sprintf(filename, "%03i.jpg", jpgCounter);
            img = fopen(filename, "w");
            jpgCounter++;
            
        } 
        if (firstTime == 1) 
        {
            fwrite(&buffer, BLOCKSIZE, 1, img);
            
        }
    
    }
    fclose(file);
    fclose(img);
    return 0;    
}
